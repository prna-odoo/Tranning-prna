<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="task_view" model="ir.ui.view">
        <field name="name">task Name</field>
        <field name="model">tasks.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- res_partner form view-->
    <record id="view_partner_property_form" model="ir.ui.view">
        <field name="name">view.partner.property.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="product.view_partner_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='property_product_pricelist']" position="after">
            <field name="days_to_deliver" string="Date of deliver"/>
            </xpath>
        </field>
    </record>

</odoo>
