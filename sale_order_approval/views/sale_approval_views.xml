<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- sale order form inherit for blockage-->
    <record id ="view_order_form" model="ir.ui.view">
        <field name="name">view.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']"  position="after">
                    <field name="zero_stock_approval" string ="Zero_stock_approval" readonly="1"/>
                </xpath>
        </field>
    </record>


    <record id="sale_order_view_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="view_order_form"/>
        <field name="groups_id" eval="[(4,ref('sales_team.group_sale_manager'))]"/>
        <field name="arch" type="xml">
            <field name='zero_stock_approval' position="attributes">
                <attribute name="readonly">False</attribute>
            </field>
        </field>
    </record>

    <record id="approval_order_inherited" model="ir.ui.view">
        <field name="name">Sale approval</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                <attribute name="attrs">{'invisible': [('zero_stock_approval' ,'=', False),"|",("state","=","sale")]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>