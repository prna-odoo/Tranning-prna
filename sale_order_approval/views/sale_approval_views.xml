<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- sale order form inherit for blockage-->
    <record id ="sale_order_view_form_inherit" model="ir.ui.view">
        <field name="name">sale_order_inhert</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <!-- <field name="groups_ids" eval="[4,ref((sales_team.group_sale_manager))]"/> -->
        <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']"  position="after">
                    <field name="Zero_stock_approval" string ="Zero_stock_approval" readonly="1"/>
                </xpath>
        </field>
    </record>


    <record id="blockage_group_user_1" model="ir.ui.view">
        <field name="name">bloackage.user</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_order_view_form_inherit"/>
        <field name="groups_id" eval="[(4,ref('sales_team.group_sale_manager'))]"/>
        <field name="arch" type="xml">
            <field name='Zero_stock_approval' position="attributes">
                <attribute name="readonly">False</attribute>
            </field>
        </field>
    </record>

</odoo>