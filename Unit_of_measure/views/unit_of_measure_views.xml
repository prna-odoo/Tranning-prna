<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">view.partner.form.product</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='sales_purchases']" position="after">
                    <page name="inventory" string="Inventory" >
                        <group> 
                            <field name="inventory_line_ids" editable="True" nolabel='1'>
                                <tree editable="True">
                                    <field name="product_id"/>
                                    <field name="uom_category"/>
                                    <field name="uom_id" domain="[('category_id','=',uom_category)]"/>
                                </tree>  
                            </field>
                        </group>
                    </page> 
                </xpath>
            </field>
        </record>
    </data>

</odoo>