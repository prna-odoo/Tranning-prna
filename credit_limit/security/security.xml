<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <data>

        <!-- Categories-->

        <record model="ir.module.category" id="module_category_sale_task">
            <field name="name">Tasks </field>
            <field name="description">Helps you handle users</field>
            <field name="sequence">10</field>
        </record>

        <record model="ir.module.category" id="module_category_sale_task_2">
            <field name="name">Sale Tasks</field>
            <field name="description">Helps you handle Tasks.</field>
            <field name="sequence">10</field>
            <field name="parent_id" ref="module_category_sale_task"/>
        </record>

        <!-- access-->

        <record id="group_sale_task_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_sale_task_2"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <!-- <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/> -->

        </record>

        
        <record id="group_sale_task_Administrator" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_category_sale_task_2"/>
            <field name="implied_ids" eval="[(4, ref('group_sale_task_user'))]"/>
        </record>

    </data>

</odoo>